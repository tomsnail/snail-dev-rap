<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="tester" extends="rap-default" namespace="/tester">
        <action name="pageTester"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="pageTester">
            <result name="success" type="velocity">/tester/pageTester.vm</result>
        </action>
        <action name="pageHttpTester"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="pageTester">
            <result name="success" type="velocity">/tester/pageHttpTester.vm</result>
        </action>
        <action name="___init___"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="___init___">
            <result name="success" type="velocity">/bcom/isOk.cb.vm</result>
        </action>
        <action name="test"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="test">
            <result name="success" type="velocity">/bcom/content.cb.vm</result>
        </action>
        
        <action name="getActionHttpInfo"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="getActionHttpInfo">
            <result name="success" type="velocity">/tester/pageHttpTester.vm</result>
        </action>
        
         <action name="saveOrUpdateActionHttp"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="saveOrUpdateActionHttp">
            <result name="success" type="velocity">/tester/pageHttpTester.vm</result>
        </action>
        
        <action name="httptest"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="httptest">
            <result name="success" type="velocity">/bcom/json.cb.vm</result>
        </action>
        
        <action name="jsJsonFormat"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="jsJsonFormat">
            <result name="success" type="velocity">/bcom/json.cb.vm</result>
        </action>
        
         <action name="testapi"
                class="com.taobao.rigel.rap.tester.web.action.TesterAction" method="testapi">
            <result name="error" type="velocity">/bcom/contentWithoutEscape.cb.vm
            </result>
            <result name="success" type="velocity">/bcom/contentWithoutEscape.cb.vm
            </result>
            <result name="json" type="rapVelocityResult">
                <param name="contentType">application/json</param>
                <param name="location">/bcom/contentWithoutEscape.cb.vm</param>
            </result>
        </action>
        
    </package>

</struts>
